<assembly>
<id>make-hdp</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>plugins/hdp*/**</include>
                <include>plugins/cdh_*/**</include>
                <include>plugins/__init__*</include>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>plugins/hdp*/tests/</exclude>
                <exclude>plugins/cdh_*/tests/</exclude>
                <exclude>plugins/hdp*/pylint*</exclude>
                <exclude>plugins/cdh_*/pylint*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
